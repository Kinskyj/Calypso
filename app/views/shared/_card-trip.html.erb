<div class="card-trip">
  <div class="card-trip__time">
    <p><%= trip.starts_at.strftime('%R') %></p>
  </div>
  <div class="u-add-padding-left u-flex-grow">
    <p><%= trip.title.upcase %> <span class="category"><%= trip.category.downcase %></p></span>
    <h3><%= trip.from.address %> <<strong>/</strong>> <%= trip.to.address %></h3>
    <p>Hosted by <%= trip.user.first_name %></p>
    <p><%= trip.participants.select { |participant| participant.status == 'accepted'}.size %> surfers going <span class="u-color-font-orange">â€¢ <%= trip.nb_participant - trip.participants.select { |participant| participant.status == 'accepted'}.size %> spots left</span></p>
  </div>
  <div class="card-trip__weather">
    <p>
      <i class="fa fa-tint u-font-big" aria-hidden="true"></i>
      <i class="fa fa-sun-o u-font-big" aria-hidden="true"></i>
    </p>
  </div>
</div>







