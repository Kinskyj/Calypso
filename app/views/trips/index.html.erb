<%= link_to 'add a trip', new_trip_path %>

<hr>

 <% @trips.each do |trip| %>
  <div>
  <h1> <%= trip.title %></h1>
  <%= link_to 'edit trip', edit_trip_path(trip.id) %>
  <%= link_to 'view trip', trip_path(trip.id) %><br>
  <%= trip.from %><br>
  <%= trip.to %><br>
  <%= trip.starts_at %><br>
  <%= trip.ends_at %><br>
  <%= trip.estimated_duration %><br>
  <%= trip.description %><br>
  <%= trip.nb_participant %><br>
  <%= trip.user.email %><br>
  <%= trip.status %><br>
  <%= trip.category %><br>
  <%= trip.car %><br>
  <%= trip.house %><br>
  <%= trip.equipment %><br><br>

  <h4> NB participants : <%= trip.participants.count %></h4>
  <ul>
    <% trip.participants.each do |participant| %>
    <li> <%= participant.user.email %></li>
    <% end %>
  </ul>
  <hr>
  </div>
 <% end %>
