<div class="container">


  <div class="dashboard">

    <div class="dashboard-trips">
      <h4>Upcoming trips</h4>

      <% @trips_day_up.each do |day, trips| %>
    <div class="date">
      <h3><%= day.strftime('%v') %></h3>
    </div>
      <% for trip in trips %>
        <%= trip[:type]  %>
        <%= render "shared/card-trip-dashboard", trip: trip[:trip] %>
      <% end %>
    <% end %>

    <h4>Past trips</h4>

      <% @trips_day_past.each do |day, trips| %>
    <div class="date">
      <h3><%= day.strftime('%v') %></h3>
    </div>
    <% for trip in trips %>
      <%= render "shared/card-trip-dashboard", trip: trip[:trip] %>
    <% end %>
    <% end %>


    <div class="card-user">
    @trips.each do
      <%= render 'shared/card-trip-dashboard' %>
    </div>
    </div>

    <div class="dashboard-notifications">
      <h4>Notifications</h4>

    </div>
  </div>
</div>



