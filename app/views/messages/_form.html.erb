<%= simple_form_for([ trip, message ], remote: true) do |f| %>
  <div class="form-inputs ">
    <%= f.input :content, label: false, placeholder: "Type your message here", as: :text, :input_html => {:rows => 3} %>
  </div>
  <div class="form-actions " id="send_button">
    <%= f.button :submit, "Send", input_html: {class: " btn-msg btn btn-info"} %>
  </div>
<% end %>
