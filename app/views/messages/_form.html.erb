<%= simple_form_for([ trip, message ], remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, label: false, placeholder: "Type your message here" %>
  </div>
  <div class="form-actions" id="send_button">
    <%= f.button :submit, "Send", input_html: {class: "btn btn-info"} %>
  </div>
<% end %>
